    script.
      defineProps({
        d: "display",
      })
      makeStyles({
        body: "bg-[neutral-100] tc-[neutral-900] tr-prop-all tr-time-0.4s tr-timing-ease",
        main: "w-100% display-flex fd-column flex-parent-center",
        section: "w-100% p-2rem ph-10vw",
