        ".fixed-top": "position-fixed top-0 r-0 p-2rem",
        ".primary": "tc-[primary-600]",
        '.center': "display-flex flex-parent-center",
        '.darkmode-toggler': {
          "": "box-32px bg-[neutral-200] br-4px display-flex flex-parent-center",
          span: "fs-16px fw-400 tc-[primary-500]",
        },
      })
      tenoxui()
    script.
      // darkmode toggler
      let darkMode = false;
      function toggleDarkMode() {
        darkMode = !darkMode;
        const state = {
          light:{
            body: "bg-[neutral-100] tc-[neutral-900]",
            p: "tc-[neutral-800]",
            ".primary": "tc-[primary-600]",
            '.darkmode-toggler': {
              "": "bg-[neutral-200]",
              span: "tc-[primary-600]",
            },
          },
          dark:{
            body: "bg-[neutral-900] tc-[neutral-100]",
            p: "tc-[neutral-300]",
            ".primary": "tc-[primary-500]",
            '.darkmode-toggler': {
              "": "bg-[neutral-800]",
              span: "tc-[primary-500]",
            },
          }
        };
        const currentState = darkMode ? state.dark : state.light;
        const currentIcon = darkMode ? 'dark_mode' : 'light_mode';
        const darkModeIcon = document.getElementById('darkModeIcon')
        //- console.log(darkMode, currentState);
        makeStyles(currentState);
        darkModeIcon.textContent = currentIcon
      }
